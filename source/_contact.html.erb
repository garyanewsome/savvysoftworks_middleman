<div class="contact container" id="contact">
  <h4>Contact Us:</h4>
  <div class="row">
    <form class="col s12" action="http://localhost:9494" method="post">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">perm_identity</i>
          <input id="name" type="text" class="validate">
          <label for="name">Name</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
       <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">comment</i>
          <textarea id="textarea1" class="materialize-textarea" length="140"></textarea>
          <label for="textarea1">Textarea</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light submit" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>